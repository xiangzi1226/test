        <script src="js/zepto.js"></script>
        <script src="js/event.js"></script>
        <script src="js/touch.js"></script>
        <script src="js/swiper.js"></script>
	<script>
       var app= angular.module('myapp',['ngRoute'])
            app.config(['$routeProvider', function($routeProvider){
                $routeProvider
                .when('/',{templateUrl:'html/main.html'})
                .when('/luntan',{templateUrl:'html/luntan.html',controller:'luntan'})
                .when('/xuanche',{templateUrl:'html/xuanche.html'})
                .when('/find',{templateUrl:'html/find.html',controller:'findCtr'})
                .when('/my',{templateUrl:'html/my.html'})
             	.otherwise({redirectTo:'/'});
            }]);
        </script>
         <script src="js/find.js"></script>
        <script src="js/fx.js"></script>
        <script src="js/luntan.js"></script>
        <script src="js/my.js"></script>
        <script src="js/main.js"></script>
        <script src="js/xuanche.js"></script>
</html>
	
