        <script src="http://apps.bdimg.com/libs/angular-route/1.3.13/angular-route.js"></script>
		<script>
			var html = document.querySelector("html");
			html.style.fontSize = html.offsetWidth / 1242*100 + "px";
			addEventListener("resize", function() {
				html.style.fontSize = html.offsetWidth / 1242 * 100 + "px";
			}, false);
		</script>
		<title></title>
		<link rel="stylesheet" type="text/css" href="css/mian.css"/>
		<link rel="stylesheet" href="css/find.css" />
		<link rel="stylesheet" href="font/iconfont.css" />
		<link rel="stylesheet" href="css/swiper.css" />
		<link rel="stylesheet" type="text/css" href="css/luntan.css"/>
		<link rel="stylesheet" type="text/css" href="css/my.css"/>
		<link rel="stylesheet" type="text/css" href="css/tuijian.css"/>
		<link rel="stylesheet" type="text/css" href="css/xuanche.css"/>
	</head>
	<body ng-app="myapp">								
				<div ng-view="" class="view_wrap"></div>			
			<div class="wrapper">
			<nav>
					<ul>
					<li><a href="#/"><i class="iconfont icon1">&#xe61c;</i> <span>推荐</span></a></li>
